@*第一次登入請重設密碼，還未加入判斷是否第一次*@
<h2>Staff Index</h2>
<div id="VuePage">
    <div class="modal-content">
        <div class="modal-header border-bottom-0">
            <h5 class="modal-title" id="exampleModalLabel">您好！@TempData["str"]，第一次登入請重設密碼。</h5>
        </div>
        <div class="modal-body">
            <div style="float: left; margin-left: 65px; padding-top: 6px;"><label>密碼 &nbsp;&nbsp;</label></div>
            <div><input type="password" class="form-control" v-model="form.UserPassword"></div>
            <br>
            <div style="float:left; margin-left: 65px;"><label>再次 &nbsp;&nbsp;<br>密碼 &nbsp;&nbsp;</label></div>
            <div><input type="password" class="form-control" v-model="form.UserPassword2"></div>
            <br>
        </div>
        <div class="modal-footer border-top-0 d-flex justify-content-center">
            <button type="submit" class="btn btn-success" 　v-on:click="DoMemberOneLogin()">確定</button>
        </div>
    </div>
</div>
@section scripts {
    <script>
    var VuePage = new Vue
    ({
        el: '#VuePage',
        data: function ()
        {
            var data = {
                form:
                {
                }
            };
            return data;
        },
        methods:
        {
            // 執行按鈕
            DoMemberOneLogin: function ()
            {
                var self = this;

                // 組合表單資料
                var postData = {};
                postData['StaffNumber'] = @TempData["str"];
                postData['UserPassword'] = self.form.UserPassword;
                postData['UserPassword2'] = self.form.UserPassword2;

                // 使用 jQuery Ajax 傳送至後端
                $.ajax
                ({
                    url:'@Url.Content("~/Staff/DoMemberOneLogin")', //呼叫Controllers裡的Function
                    method:'POST',
                    dataType:'json',
                    data: { inModel: postData },
                    success: function (datas)
                    {
                        if (datas.ErrMsg)
                        {
                            alert(datas.ErrMsg);
                            return;
                        }
                        alert(datas.ResultMsg);
                        //window.location.href = '@Url.Action("Index", "Staff")';//成功後跳轉網頁
                    },
                    error: function (err){},
                });
            }
        }
    })
    </script>
}




